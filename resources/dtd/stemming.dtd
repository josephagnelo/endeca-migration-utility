<!ENTITY % common.dtd SYSTEM "common.dtd">
%common.dtd;

<!ELEMENT STEMMING (
  STEM_ZH_CN?,
  STEM_ZH_TW?,
  STEM_JP?,
  STEM_KO?,
  STEM_EN_US?,
  STEM_EN_UK?,
  STEM_FR?,
  STEM_IT?,
  STEM_DE?,
  STEM_ES?,
  STEM_PT?,
  STEM_NL?,
  STEM_DA?,
  STEM_EL?,
  STEM_CS?,
  STEM_HU?,
  STEM_PL?,
  STEM_RU?,
  STEM_AR?,
  STEM_XX?
)>

<!--
	The STEMMING element includes a list of STEM_<language_code> elements
	that specify whether stemming is enabled for a language.  For example,

	<STEM_ZH_CN ENABLE="TRUE"/>
	<STEM_JP ENABLE="FALSE"/>

	means that stemming should be enabled for chinese and disabled for japanese.
	Note that every language is encoded by a tag element.  This allows us to
	identify supported languages just by looking at the .dtd.	
	
	For more information on word forms and stemming, refer to Endeca Documentation.
-->

<!-- CJK languages -->

<!ELEMENT STEM_ZH_CN EMPTY>
<!ATTLIST STEM_ZH_CN ENABLE (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_ZH_CN USE_STATIC_WORDFORMS (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_ZH_CN USE_COMPOUND_MATCHING (TRUE | FALSE) "TRUE">

<!ELEMENT STEM_ZH_TW EMPTY>
<!ATTLIST STEM_ZH_TW ENABLE (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_ZH_TW USE_STATIC_WORDFORMS (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_ZH_TW USE_COMPOUND_MATCHING (TRUE | FALSE) "TRUE">

<!ELEMENT STEM_JP   EMPTY>
<!ATTLIST STEM_JP   ENABLE (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_JP   USE_STATIC_WORDFORMS (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_JP   USE_COMPOUND_MATCHING (TRUE | FALSE) "TRUE">

<!ELEMENT STEM_KO   EMPTY>
<!ATTLIST STEM_KO   ENABLE (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_KO   USE_STATIC_WORDFORMS (TRUE | FALSE) "FALSE">
<!ATTLIST STEM_KO   USE_COMPOUND_MATCHING (TRUE | FALSE) "TRUE">

